<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <br.edu.uemg.progiv.simplepaint.ViewCanvas
        android:id="@+id/area_desenho"
        android:layout_width="match_parent"
        android:layout_height="460dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/limpar"
        android:onClick="limparDesenho"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="corVerde"
        android:text="@string/corVerde" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="corVermelha"
        android:text="@string/corVermelha" />

</LinearLayout>